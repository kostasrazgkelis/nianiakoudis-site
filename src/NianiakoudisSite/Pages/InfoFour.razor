@page "/info-4"

<MudBox Class="home-stack info-stack">

    <MudContainer Class="info-hero">
        <MudImage ObjectFit="ObjectFit.Cover" Src="/assets/pictures/our-services-page-4.jpg" Alt="@L["Contact.HeroImageAlt"]" Class="contact-hero elevator-reveal"/>

        <MudPaper Class="info-page" Square="true" Elevation="2">
            <MudText Typo="Typo.h4">@L["Info.4.Title"]</MudText>
            <MudBox Class="info-feature-row">
                <MudBox Class="info-feature-pill info-anim-1">
                    <MudIcon Icon="@Icons.Material.Filled.SupportAgent" />
                    <MudText Typo="Typo.subtitle2">Υποστήριξη</MudText>
                </MudBox>
                <MudBox Class="info-feature-pill info-anim-2">
                    <MudIcon Icon="@Icons.Material.Filled.SettingsSuggest" />
                    <MudText Typo="Typo.subtitle2">Βελτιώσεις</MudText>
                </MudBox>
            </MudBox>
        </MudPaper>
    </MudContainer>

    <MudText Typo="Typo.body1" Class="info-paragraph">
        <MudIcon Icon="@Icons.Material.Filled.BuildCircle" Class="info-paragraph-icon info-anim-1" />
        @L["Info.4.Paragraph1"]
    </MudText>
    <MudText Typo="Typo.body1" Class="info-paragraph">
        <MudIcon Icon="@Icons.Material.Filled.Update" Class="info-paragraph-icon info-anim-2" />
        @L["Info.4.Paragraph2"]
    </MudText>
</MudBox>
