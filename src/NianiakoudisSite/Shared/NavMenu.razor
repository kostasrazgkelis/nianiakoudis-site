<MudStack Class="nav-links nav-links-desktop" Row="true" Spacing="2">
    <MudNavLink Href="" Match="NavLinkMatch.All">@L["Nav.Home"]</MudNavLink>
    <MudNavLink Href="about">@L["Nav.About"]</MudNavLink>
    <MudMenu Class="services-menu" Dense="true" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
        <ActivatorContent>
            <MudButton Class="services-menu-button" Variant="Variant.Text" EndIcon="@Icons.Material.Filled.KeyboardArrowDown">
                @L["Nav.Services"]
            </MudButton>
        </ActivatorContent>
        <ChildContent>
            <MudMenuItem Href="info-1">@L["Nav.Service1"]</MudMenuItem>
            <MudMenuItem Href="info-2">@L["Nav.Service2"]</MudMenuItem>
            <MudMenuItem Href="info-3">@L["Nav.Service3"]</MudMenuItem>
            <MudMenuItem Href="info-4">@L["Nav.Service4"]</MudMenuItem>
            <MudMenuItem Href="info-5">@L["Nav.Service5"]</MudMenuItem>
        </ChildContent>
    </MudMenu>
    <MudNavLink Href="contact">@L["Nav.Contact"]</MudNavLink>
</MudStack>

<MudMenu Class="nav-links-mobile" Dense="true" AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
    <ActivatorContent>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" />
    </ActivatorContent>
    <ChildContent>
        <MudMenuItem Href="" Match="NavLinkMatch.All">@L["Nav.Home"]</MudMenuItem>
        <MudMenuItem Href="about">@L["Nav.About"]</MudMenuItem>
        <MudMenuItem Href="info-1">@L["Nav.Service1"]</MudMenuItem>
        <MudMenuItem Href="info-2">@L["Nav.Service2"]</MudMenuItem>
        <MudMenuItem Href="info-3">@L["Nav.Service3"]</MudMenuItem>
        <MudMenuItem Href="info-4">@L["Nav.Service4"]</MudMenuItem>
        <MudMenuItem Href="info-5">@L["Nav.Service5"]</MudMenuItem>
        <MudMenuItem Href="contact">@L["Nav.Contact"]</MudMenuItem>
    </ChildContent>
</MudMenu>
