@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Class="app-bar" Color="Color.Default" Fixed="true" Elevation="0">
        <MudLink Href="/" Class="brand-link">
            <MudStack Class="brand-stack" Row="true" Spacing="1" AlignItems="AlignItems.Center">
                <MudIcon Icon="@Icons.Material.Filled.Business" Class="brand-icon" />
                <MudText Typo="Typo.h6" Class="brand-text">TCS CONSULTING SERVICES</MudText>
            </MudStack>
        </MudLink>
        <MudSpacer />
        <NavMenu />
    </MudAppBar>

    <MudMainContent Class="app-main">
        <MudBox Class="content">
            @Body
        </MudBox>
    </MudMainContent>

    <MudPaper Class="app-footer" Square="true" Elevation="0">
        <MudText Typo="Typo.subtitle1">&copy; 2024 TCS CONSULTING SERVICES</MudText>
        <MudStack Class="footer-contact" Row="true" Spacing="2">
            <MudText Typo="Typo.body1">Telephone: <MudLink Href="tel:+302311234567">+30 231 123 4567</MudLink></MudText>
            <MudText Typo="Typo.body1">Email: <MudLink Href="mailto:info@nianiakoudis.gr">info@nianiakoudis.gr</MudLink></MudText>
            <MudText Typo="Typo.body1">LinkedIn: <MudLink Href="https://www.linkedin.com/company/nianiakoudis" Target="_blank" Rel="noopener noreferrer">linkedin.com/company/nianiakoudis</MudLink></MudText>
        </MudStack>
    </MudPaper>
</MudLayout>
