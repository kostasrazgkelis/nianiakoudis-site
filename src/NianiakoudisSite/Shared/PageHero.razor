@using NianiakoudisSite.Models

<section class="hero">
    <MudPaper Class="hero-card" Square="true" Elevation="1">
        <MudText Typo="Typo.h3">@Content.Hero</MudText>
        <MudText Typo="Typo.subtitle1" Class="summary">@Content.Summary</MudText>

        <MudList T="string" Class="highlights">
            @foreach (var highlight in Content.Highlights)
            {
                <MudListItem T="string">@highlight</MudListItem>
            }
        </MudList>
    </MudPaper>
</section>

@code {
    [Parameter]
    public required PageContent Content { get; set; }
}
