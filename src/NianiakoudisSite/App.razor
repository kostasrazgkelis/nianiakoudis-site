<MudThemeProvider Theme="@theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<Router AppAssembly="typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(Shared.MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(Shared.MainLayout)">
            <MudText Typo="Typo.h6" Color="Color.Error" role="alert">&#x0397; &#x03C3;&#x03B5;&#x03BB;&#x03AF;&#x03B4;&#x03B1; &#x03B4;&#x03B5;&#x03BD; &#x03B2;&#x03C1;&#x03AD;&#x03B8;&#x03B7;&#x03BA;&#x03B5;.</MudText>
        </LayoutView>
    </NotFound>
</Router>

@code {
    private readonly MudBlazor.MudTheme theme = new MudTheme()
    {
        PaletteLight = new PaletteLight
        {
            Primary = "#1E88E5",
            Secondary = "#E53935"}
        ,
        Typography = new MudBlazor.Typography
        {
            Default = new MudBlazor.Default
            {
                FontFamily = new[] { "Noto Sans", "Inter", "Roboto", "Arial", "sans-serif" }
            }
        }
    };
}
